package test;

import controls.EmploeeManagement;

public class TestEmployeeManager {

	public boolean isAnagram(String s1, String s2) {
		int i = 0;
		int j = s2.length() - 1;

		while (i < s1.length() && j >= 0) {
			if (isSpaceOrDot(s1, i)) {
				i++;
				continue;
			}
			if (isSpaceOrDot(s2, j)) {
				j--;
				continue;
			}

			if (s1.charAt(i) == s2.charAt(j)) {
				i++;
				j--;
			} else {
				return false;
			}

		}

		return i == s1.length() && j == 0;
	}

	private boolean isSpaceOrDot(String s2, int j) {
		return s2.charAt(j) == ' ' || s2.charAt(j) == '.';
	}

	public static void main(String[] args) {

		String s1 = "abc";
		String s2 = "cba";

		new EmploeeManagement().run();
	}
}
