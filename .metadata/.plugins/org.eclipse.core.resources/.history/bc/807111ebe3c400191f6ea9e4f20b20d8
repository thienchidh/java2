package test;

import controls.EmploeeManagement;

class MyTest {
	public static void main(String[] args) {
		String s1 = "abc";
		String s2 = "cba";

		boolean anagram = new MyTest().isAnagram(s1, s2);
		System.out.println(anagram);
	}

	public boolean isAnagram(String s1, String s2) {
		int i = 0;
		int j = s2.length() - 1;

		while (i < s1.length() && j >= 0) {
			if (isSpaceOrDot(s1.charAt(i))) {
				i++;
				continue;
			}
			if (isSpaceOrDot(s2.charAt(j))) {
				j--;
				continue;
			}

			if (s1.charAt(i) == s2.charAt(j)) {
				i++;
				j--;
			} else {
				return false;
			}

		}

		System.out.println(i);
		System.out.println(j);
		
		return i == s1.length() && j < 0;
	}

	private boolean isSpaceOrDot(char x) {
		return x == ' ' || x == '.';
	}
}

public class TestEmployeeManager {

	public static void main(String[] args) {

		MyTest.main(args);
		new EmploeeManagement().run();
	}

}
