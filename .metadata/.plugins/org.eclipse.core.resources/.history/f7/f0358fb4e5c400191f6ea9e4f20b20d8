package test;

class MyTest {
	public static void main(String[] args) {
		String s1 = "software";
		String s2 = "swear oft.";

		boolean anagram = new MyTest().isAnagram(s1, s2);
		System.out.println(anagram);
	}

	public boolean isAnagram(String s1, String s2) {
		char[] x = removeDotSpace(s1).toCharArray();
		char[] y = removeDotSpace(s2).toCharArray();

		StringBuilder stringBuilder = new StringBuilder();
		return stringBuilder.append(x).toString().equals(stringBuilder.append(y).toString());
	}

	private String removeDotSpace(String x) {
		StringBuilder sb = new StringBuilder();
		for (int i = 0; i < x.length(); i++) {
			char at = x.charAt(i);
			if (at == ' ' || at == '.') {
				continue;
			}
			sb.append(at);
		}
		return sb.toString();
	}

}

public class TestEmployeeManager {

	public static void main(String[] args) {

		MyTest.main(args);
//		new EmploeeManagement().run();
	}

}
